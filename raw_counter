<!DOCTYPE html>
<html>
<head>
  <title>Simple Counter</title>
</head>
<body>

  <button onclick="decrement()">-</button>
  <span id="count">0</span>
  <button onclick="increment()">+</button>

  <script>
    let count = 0;

    function increment() {
      count++;
      document.getElementById("count").textContent = count;
    }

    function decrement() {
      count--;
      document.getElementById("count").textContent = count;
    }
  </script>

</body>
</html>
